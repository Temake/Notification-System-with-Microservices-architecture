# Common Configuration
NODE_ENV=development
LOG_LEVEL=info

# API Gateway
API_GATEWAY_PORT=3000
JWT_SECRET=your-secret-key-change-in-production
API_RATE_LIMIT=100

# User Service
USER_SERVICE_PORT=3001
USER_DB_HOST=postgres
USER_DB_PORT=5432
USER_DB_NAME=user_service_db
USER_DB_USER=postgres
USER_DB_PASSWORD=postgres

# Email Service
EMAIL_SERVICE_PORT=3002
EMAIL_DB_HOST=postgres
EMAIL_DB_PORT=5432
EMAIL_DB_NAME=email_service_db
EMAIL_DB_USER=postgres
EMAIL_DB_PASSWORD=postgres

# SMTP Configuration (Choose one)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# SendGrid (Alternative)
SENDGRID_API_KEY=your-sendgrid-api-key

# Push Service
PUSH_SERVICE_PORT=3003
PUSH_DB_HOST=postgres
PUSH_DB_PORT=5432
PUSH_DB_NAME=push_service_db
PUSH_DB_USER=postgres
PUSH_DB_PASSWORD=postgres

# Firebase Cloud Messaging
FCM_SERVER_KEY=your-fcm-server-key
FCM_PROJECT_ID=your-firebase-project-id

# OneSignal (Alternative)
ONESIGNAL_APP_ID=your-onesignal-app-id
ONESIGNAL_API_KEY=your-onesignal-api-key

# Template Service
TEMPLATE_SERVICE_PORT=3004
TEMPLATE_DB_HOST=postgres
TEMPLATE_DB_PORT=5432
TEMPLATE_DB_NAME=template_service_db
TEMPLATE_DB_USER=postgres
TEMPLATE_DB_PASSWORD=postgres

# RabbitMQ
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin
RABBITMQ_VHOST=/
RABBITMQ_MANAGEMENT_PORT=15672

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Circuit Breaker Settings
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Retry Settings
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000
RETRY_BACKOFF_MULTIPLIER=2
