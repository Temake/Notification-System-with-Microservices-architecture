EMAIL_SERVICE_PORT=8002

# Database (PostgreSQL connection string)
# Format: postgresql+asyncpg://user:password@host:port/database
# Docker: use 'postgres' as host | Local: use 'localhost' as host
DATABASE_URL=postgresql+asyncpg://notification_user:notification_password@postgres:5432/email_service_db

# Gmail SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM_NAME=Notification System

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
EMAIL_QUEUE_NAME=email.queue

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Service URLs
USER_SERVICE_URL=http://localhost:8001
TEMPLATE_SERVICE_URL=http://localhost:8004
API_GATEWAY_URL=http://localhost:8000

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=5

# Logging
LOG_LEVEL=info
