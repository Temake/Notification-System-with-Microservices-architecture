USER_SERVICE_PORT=8001

# Database (PostgreSQL connection string)
# Format: postgresql+asyncpg://user:password@host:port/database
# Docker: use 'postgres' as host | Local: use 'localhost' as host
DATABASE_URL=postgresql+asyncpg://notification_user:notification_password@postgres:5432/user_service_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Logging
LOG_LEVEL=info
