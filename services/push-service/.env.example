PUSH_SERVICE_PORT=8003

# Database (PostgreSQL connection string)
# Format: postgresql+asyncpg://user:password@host:port/database
# Docker: use 'postgres' as host | Local: use 'localhost' as host
DATABASE_URL=postgresql+asyncpg://notification_user:notification_password@postgres:5432/push_service_db

# Push Provider (choose one)
# FCM (Firebase Cloud Messaging)
FCM_SERVER_KEY=your-fcm-server-key-here

# OneSignal (alternative)
ONESIGNAL_APP_ID=your-onesignal-app-id
ONESIGNAL_API_KEY=your-onesignal-api-key

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
PUSH_QUEUE_NAME=push.queue

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Service URLs
USER_SERVICE_URL=http://localhost:8001
TEMPLATE_SERVICE_URL=http://localhost:8004
API_GATEWAY_URL=http://localhost:8000

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=5

# Logging
LOG_LEVEL=info
